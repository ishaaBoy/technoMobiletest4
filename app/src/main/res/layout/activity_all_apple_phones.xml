<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllApplePhones"
    android:background="@drawable/categorybackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apple"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textAllCaps="true"
        android:padding="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/yellowrounded">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="iPhone 13 pro Max"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="195dp"
                android:layout_height="89dp"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:text="Rs.349,000/-"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/GoPayment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:padding="1dp"
                android:text="Buy"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/applephone" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/yellowrounded">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="iPhone 12 pro Max"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="195dp"
                android:layout_height="89dp"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:text="Rs.249,000/-"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/GoPayment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:padding="1dp"
                android:text="Buy"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/iphone12promax" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/yellowrounded">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="iPhone 7+"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="195dp"
                android:layout_height="89dp"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:text="Rs.71,000/-"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                android:padding="1dp"
                android:text="Buy"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/iphone7plus" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/yellowrounded">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="iPhone 11"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="195dp"
                android:layout_height="89dp"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:text="Rs.188,000/-"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                android:padding="1dp"
                android:text="Buy"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/iphone11" />


        </RelativeLayout>



    </LinearLayout>

</ScrollView>